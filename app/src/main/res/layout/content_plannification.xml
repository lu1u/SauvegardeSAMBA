<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lpi.sauvegardesamba.fragments.PlannificationFragment">

    <TextView
        android:id="@+id/textViewProchaineSauvegarde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="dd/mm/hh hh:mm"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numbersSelectorColor="#cd1a1a"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBoxConnexionWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenter une sauvegarde dès que le téléphone se connecte au WIFI"/>

        <CheckBox
            android:id="@+id/checkBoxSauvegardePlannifiee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="Sauvegarde quotidienne automatique"/>
    </LinearLayout>

</FrameLayout>
