<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/text_margin"
              android:gravity="center_vertical"
              android:padding="@dimen/text_margin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/taille_image_liste_profils"
        android:layout_height="@dimen/taille_image_liste_profils"
        android:maxHeight="@dimen/taille_image_liste_profils"
        android:maxWidth="@dimen/taille_image_liste_profils"
        android:minHeight="@dimen/taille_image_liste_profils"
        android:minWidth="@dimen/taille_image_liste_profils"
        android:src="@drawable/ic_auto"
        android:tint="?attr/tintIcones"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</LinearLayout>
